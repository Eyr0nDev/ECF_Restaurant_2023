{% extends 'base.html.twig' %}


{% block title %}Réserver{% endblock %}


{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-6 col-lg-4 mt-3">
                <h2 class="text-center">Réserver une table</h2>
                {{ form_start(form) }}
                <div class="form-group">
                    {{ form_label(form.name, 'Nom') }}
                    {{ form_errors(form.name) }}
                    {{ form_widget(form.name, {'attr': {'class': 'form-control', 'id': 'booking_name'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.restaurant, 'Restaurant') }}
                    {{ form_errors(form.restaurant) }}
                    {{ form_widget(form.restaurant, {'attr': {'class': 'form-control', 'id': 'booking_restaurant'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.date, 'Date') }}
                    {{ form_errors(form.date) }}
                    {{ form_widget(form.date, {'attr': {'class': 'form-control', 'id': 'booking_date'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.time, 'Heure') }}
                    {{ form_errors(form.time) }}
                    {{ form_widget(form.time, {'attr': {'class': 'form-control', 'id': 'booking_time'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.numGuests, 'Nombre de couverts') }}
                    {{ form_errors(form.numGuests) }}
                    {{ form_widget(form.numGuests, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.allergies, 'Allergies, mentions particulières (Facultatif)') }}
                    {{ form_errors(form.allergies) }}
                    {{ form_widget(form.allergies, {'attr': {'class': 'form-control'}}) }}
                </div>
                <button type="submit" class="form-control btn btn-custom-primary mt-2 px-3">Valider</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
    {% block javascripts %}
         <script src="{{ asset('js/booking_form.js') }}"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous">
        </script>
    {% endblock %}
{% endblock %}

