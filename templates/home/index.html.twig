{% extends 'base.html.twig' %}

{% block title %} Le Quai Antique {% endblock %}

{% block body %}
    <div>
        <h1 class="align-self-lg-center">Bienvenue au Quai antique</h1>
    </div>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-10 col-lg-8">
                <div id="carouselExample" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        {% for plat in plats %}
                            <div class="carousel-item{% if loop.first %} active{% endif %}">
                                <img src="{{ asset('upload/images/meals/' ~ plat.image) }}" class="d-block w-100 carousel-img-lg" alt="{{ plat.name }}">
                                <div class="carousel-caption d-none d-md-block">
                                    <h5>{{ plat.name }}</h5>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Précédent</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Suivant</span>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mt-4">
        <a href="{{ path('booking') }}" class="btn btn-primary btn-lg">Réserver une table</a>
    </div>


    {% block javascripts%}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous">

        </script>
        <script src="https://use.fontawesome.com/releases/v5.15.3/js/all.js" crossorigin="anonymous"></script>
    {% endblock %}
{% endblock %}
