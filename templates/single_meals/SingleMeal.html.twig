{% extends 'base.html.twig' %}

{% block title %}La Carte{% endblock %}

{% block body %}
    <header>
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container-fluid">
                <a class="navbar-brand" href="{{ path('app_home') }}">
                    <img src="{{ asset('Images/LeQuaiAntique.png') }}" alt="Logo Du Quai Antique" class="img-fluid">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link "  href="{{ path('app_home') }}">Accueil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active"  aria-current="page" href="{{ path('app_singleMeals') }}">La carte</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_login') }}">Connexion</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link disabled">Disabled</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container mt-3">
        <div class="row">
            <div class="col-md-12">
                <label for="sortCategory">Sort by Category:</label>
                <select id="sortCategory" class="form-control">
                    <option value="default">Tous les plats</option>
                    {% for category in categories %}
                        <option value="{{ category }}">{{ category }}</option>
                    {% endfor %}
                </select>
            </div>
        </div>
    </div>
    <div class="row justify-content-center">
        {% for plat in plats %}
            <div class="col-12 col-sm-6 col-md-4 col-lg-3 my-3 " data-index="{{ loop.index }}">
                <div class="card shadow-sm h-100 ">
                    <img class="card-img-top img-fluid" src="{{ asset('upload/images/meals/' ~ plat.image) }}" alt="{{ plat.name }}">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">{{ plat.name }}</h5>
                        <h6 class="card-subtitle">{{ plat.Category }}</h6>
                        <p class="card-text">{{ plat.description }}</p>
                        <div class="d-flex justify-content-between align-items-end mt-auto">
                            <small class="text-muted">{{ plat.price }}â‚¬</small>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    {% block javascripts %}
        <script
            src="{{ asset('js/SortCards.js') }}">
        </script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous">

        </script>
        <script src="https://use.fontawesome.com/releases/v5.15.3/js/all.js" crossorigin="anonymous"></script>
    {% endblock %}

{% endblock %}