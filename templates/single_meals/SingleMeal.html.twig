
{% extends 'base.html.twig' %}

{% block title %}La Carte{% endblock %}

{% block body %}
    <header>
        <nav class="navbar navbar-expand-md navbar-light bg-light">
            <a class="navbar-brand" href="{{ path('app_home') }}">
                <img src="{{ asset('Images/LeQuaiAntique.png') }}" alt="Logo Du Quai Antique">
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <div class="navbar-nav  ml-auto">
                    <a class="nav-item nav-link" href="{{ path('app_home') }}">Accueil</a>
                    <a class="nav-item nav-link active" href="#">La carte</a>
                    <a class="nav-item nav-link" href="{{ path('app_login') }}">Connexion</a>
                </div>
            </div>
        </nav>
    </header>
    <div class="row justify-content-center">
        {% for plat in plats %}
            <div class="col-sm-6 col-md-4 col-lg-3 my-3">
                <div class="card shadow-sm h-100">
                    <img class="card-img-top img-fluid" src="{{ asset('upload/images/meals/' ~ plat.image) }}" alt="{{ plat.name }}">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">{{ plat.name }}</h5>
                        <h6 class="card-subtitle">{{ plat.Category }}</h6>
                        <p class="card-text">{{ plat.description }}</p>
                        <div class="d-flex justify-content-between align-items-end mt-auto">
                            <small class="text-muted">{{ plat.price }}â‚¬</small>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}



